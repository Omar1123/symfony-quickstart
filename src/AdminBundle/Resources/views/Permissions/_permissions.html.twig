<table class="table">
    <thead>
        <tr>
            <th>{{ 'base.admin.permissions.id' | trans }}</th>
            <th>{{ 'base.admin.permissions.name' | trans }}</th>
            <th>{{ 'base.admin.permissions.delete' | trans }}</th>
        </tr>
    </thead>
    <tbody>
        {% for permission in list %}
            <tr>
                <td>{{ permission.id }}</td>
                <td>{{ permission.role }}</td>
                <td>
                    <input
                        type="button"
                        class="btn btn-danger domajax click"
                        data-endpoint="{{ path('admin_permissions_delete', {token: csrf_token('delete-permission')}) }}"
                        data-confirm="{{ 'base.admin.permissions.confirm_delete' | trans({'%permission%': permission.role }) | e('html_attr') }}"
                        data-input-attr="id"
                        data-id="{{ permission.id }}"
                        data-output="#permissions"
                        value="{{ 'base.admin.permissions.delete' | trans }}"
                    />
                    &nbsp;
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

